                "type": "button",
                "text": {
                    "type": "plain_text",
                    "text": ":white_check_mark: Opt In!",
                    "emoji": true
                },
                "value": "{{ .ChannelID }}",
                "action_id": "GREET_MEMBER|confirm"
            }
        }
