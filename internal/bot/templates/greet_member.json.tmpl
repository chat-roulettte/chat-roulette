            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": ":wave: Hello <@{{ .UserID }}>"
            }
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
                "text": "Welcome to the <#{{ .ChannelID }}> channel :tada:"
            }
        },
        {
            "type": "section",
            "text": {
                "type": "mrkdwn",
